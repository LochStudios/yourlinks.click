# YourLinks.click - Apache Configuration for Wildcard Subdomains

# Enable rewrite engine
RewriteEngine Onx

# Force HTTPS for all requests
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Handle wildcard subdomains
# Route username.yourlinks.click/linkname to redirect.php
RewriteCond %{HTTP_HOST} ^([a-zA-Z0-9-]+)\.yourlinks\.click$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ redirect.php [L,QSA]

# Handle www.yourlinks.click
RewriteCond %{HTTP_HOST} ^www\.yourlinks\.click$ [NC]
RewriteRule ^(.*)$ https://yourlinks.click/$1 [R=301,L]

# Handle main domain requests
RewriteCond %{HTTP_HOST} ^yourlinks\.click$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L,QSA]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Prevent access to sensitive files
<Files "database_schema.sql">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.log">
    Order Allow,Deny
    Deny from all
</Files>

# Protect config directory
<Directory "../config">
    Order Deny,Allow
    Deny from all
</Directory>